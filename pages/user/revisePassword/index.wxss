.password{
  height: 96rpx;
}
.password view:nth-child(1){
  display: flex;
  width: 100%;
  height: 94rpx;
  align-items: center;
  position: relative;
}
.password view:nth-child(1) text{
  font-size: 34rpx;
  color: #333333;
  margin-left: 32rpx;
  margin-right: 30rpx;
}
.password view:nth-child(1) input{
  position:absolute;
  left: 212rpx;
}
.actShow{
  width: 95.7%;
  height: 1rpx;
  background: #333333;
  margin-left: 4.3%;
}
.actNone{
  width: 95.7%;
  height: 1rpx;
  background: #eee;
  margin-left: 4.3%;
}
.btn{
  width: 100%;
  height: 94rpx;
  background: #FFE300;
  font-size: 36rpx;
  color: #333333;
  text-align: center;
  line-height: 94rpx;
  position: absolute;
  bottom: 0;
}