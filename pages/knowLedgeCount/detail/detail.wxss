/* pages/detail/detail.wxss */
.home{
  width: 750rpx;
}
.inp{
    position: relative;
    display: block;
    width: 570rpx;
    height: 72rpx;
    margin: 44rpx auto 22rpx;
    background: rgb(255, 255, 255);
    border: 1px solid rgb(151, 151, 151);
    cursor: pointer;
  }
  .inp>span{
    display: inline-block;
    position: absolute;
    right: 0;
    font-size: 24rpx;
    color: rgb(255, 255, 255);
    width: 210rpx;
    height: 72rpx;
    text-align: center;
    line-height: 72rpx;
    border-left: 2epx solid rgb(151, 151, 151);
    background: rgb(58, 139, 251);
  }
  .icon{
    width: 24rpx;
    height: 24rpx;
    display: inline-block;
    position: absolute;
    right: 30rpx;
    top: 10rpx;
  }
  .textBox{
    position: absolute;
    top: 0;
    left: 0;
    text-align: left;
    width: 100%;
    height: 100%;
    font-size: 24rpx;
    padding-left: 10rpx;
    line-height: 50rpx;
    background: rgba(32,31,31,0.41);
    color: rgb(255, 255, 255);
  }
  .imgBox,.bgBox{
    width: 750rpx;
    height: 264rpx;
    display: flex;
    align-items: center;
    position: relative;
    margin: 0 auto;
  }
  .bgBox{
    overflow: hidden;
  }
  .imgBox image{
    width: 100%;
  }
  .countImg{
    width: 264rpx;
    height: 264rpx;
    overflow: hidden;
    position: absolute;
    top: 68rpx;
    left: 42rpx;
  }
  .countImg image{
    width: 100%;
  }
  .title{
    margin-top: 94rpx;
    margin-left: 42rpx;
    font-size: 32rpx;
    color: rgb(51, 51, 51);
    font-weight: 600;
  }
  /* .case-page{ */
    /* padding:20rpx; */
  /* } */
  .list-masonry{
    /* column-count: 2;
    column-gap: 20rpx; */
    display: flex;
    flex-wrap: wrap;
    width: 750rpx;
    justify-content: space-around;
    word-wrap: break-word;
    word-wrap: break-all;
    overflow: hidden;
  }

  .item-masonry{
    background-color: #fff;
    break-inside: avoid;/*避免在元素内部插入分页符*/
    box-sizing: border-box; 
    /* padding: 20rpx; */
    margin-bottom:20rpx;
    width: 360rpx;
    position: relative;
  }
  .item-masonry .actBtn{
    position: absolute;
    width: 168rpx;
    height: 56rpx;
    background: #FF8900;
    border-radius: 14px;
    font-size: 26rpx;
    color: #FFFFFF;
    text-align: center;
    line-height: 56rpx;
    top: 46rpx;
    left: 38rpx;
  }
  .item-masonry .actText{
    width: 360rpx;
  }
  .item-masonry image {
    width: 100%;
  }
  .item-masonry text{
    padding: 4rpx;
    font-size: 24rpx;
  }
  .maxBox{
    width: 750rpx;
    height: 100vh;
    background: rgb(0, 0, 0);
    position: fixed;
    top: 0;
  }
  .maxImgBox{
    width: 750rpx;
    height: 70%;
    overflow: hidden;
    position: relative;
    top: 15%;
  }
  .maxImgBox image{
    width: 750rpx;
  }
  .listBox{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 200rpx;
  }
.flowerBox{
  width: 100%;
  height: 180rpx;
  background: #FFFFFF;
  padding-top: 10rpx;
  position: relative;
}
.flowerBox .title{
  font-size: 34rpx;
  color: #333333;
  margin-left: 30rpx;
}
.msgBox{
  position: absolute;
  width: 57%;
  height: 180rpx;
  white-space: nowrap;
  top: 40rpx;
  left: 124rpx;
}
.addBox,.scrollItem{
  display: inline-block;
  position: relative;
  width: 140rpx;
}
.scrollItem+.scrollItem{
  margin-left: 28rpx;
}
.addBox{
  position: absolute;
  right: 15rpx;
  width: 168rpx;
  height: 56rpx;
  background: #FF8900;
  border-radius: 14px;
  font-size: 26rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 56rpx;
}
.msgBox .icon{
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  top: -2rpx;
  right: -2rpx;
  z-index: 5;
}
.msgBox image:nth-child(2){
  width: 120rpx;
  height: 120rpx;
  position: relative;
  top: 10rpx;

}
.msgBox input,.placeMsg{
  width: 120rpx;
  font-size: 24rpx;
  color: #333333;
  text-align: center;
}