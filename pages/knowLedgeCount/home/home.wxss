/* pages/home/home.wxss */
.home{
  background: rgb(238, 238, 238);
  width: 100%;
  height: 100vh;
  overflow-y: auto;
  position: relative;
}
.bg{
  width: 750rpx;
  height: 101vh;
}
.body{
  width: 750rpx;
  height: 100vh;
  background: rgba(0, 0, 0, 0.525);
  position: absolute;
  top: 0;
  padding-top: 100rpx;
}
text{
  color: rgb(255, 255, 255);
}
.user{
  display: block;
  position: absolute;
  top: 0;
  margin: 26rpx 0 54rpx 40rpx;
  font-size: 12px;
  color: rgb(255, 255, 255);
}
.headerTitle{
  display: block;
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
.inp{
    position: relative;
    display: block;
    width: 570rpx;
    height: 50rpx;
    margin: 0 auto;
    background: rgba(32,31,31,0.41);
    border: 1px solid #FFFFFF;
    cursor: pointer;
  }
  .inp>span{
    display: inline-block;
    position: absolute;
    right: 0;
    font-size: 24rpx;
    color: rgb(255, 255, 255);
    width: 128rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    border-left: 1px solid rgb(255, 255, 255);
    cursor:none;
  }
  .icon{
    width: 24rpx;
    height: 24rpx;
    display: inline-block;
    position: absolute;
    right: 30rpx;
    top: 10rpx;
  }
  .textBox{
    position: absolute;
    top: 0;
    left: 0;
    text-align: left;
    width: 100%;
    height: 100%;
    font-size: 24rpx;
    padding-left: 10rpx;
    line-height: 50rpx;
    background: rgba(32,31,31,0.41);
    color: rgb(255, 255, 255);
  }
  .imgCropperBtn{
    position: fixed;
    bottom: 10rpx;
    right: 10rpx;
  }