/* pages/login/login.wxss */
.loginPage{
  width: 100%;
}
.pageBaImg{
  position: fixed;
  top: 0px;
  z-index: -1;
}
.loginTitle{
  font-size: 96rpx;
  color: #FFFFFF;
  line-height: 110rpx;
  margin-top: 266rpx;
  margin-left: 80rpx;
}
.loginDetail{
  font-size: 48rpx;
  color: #FFFFFF;
  line-height: 76rpx;
  margin-left: 80rpx;
  margin-bottom: 82rpx;
}
.inputArea{
  width: 530rpx;
  height: 104rpx;
  background: rgba(255,255,255,0.20);
  border-radius: 12rpx;
