}
.loginBtn{
  width: 580rpx;
  height: 104rpx;
  line-height: 104rpx;
  text-align: center;
  font-size: 34rpx;
  color: #323E83;
  background: #FFFFFF;
  border-radius: 12rpx;
  margin: 40rpx auto 0;
}
.bottomDetail{
  font-size: 24rpx;
  color: #CCCCCC;
  letter-spacing: 0.58rpx;
  text-align: center;
  position: absolute;
  bottom: 47rpx;
  width: 100%;
}