}
.emptyPng{
  width: 318rpx;
  height: 354rpx;
  margin:156rpx auto 130rpx 243rpx;
  margin-top: 156rpx;
  margin-bottom:130rpx;
}
.noFabricTip{
  font-family: PingFangSC-Semibold;
  font-size: 42rpx;
  color: #344B67;
  letter-spacing: -0.4rpx;
  text-align: center;
}
.tipDetail{
  opacity: 0.7;
  font-family: PingFangSC-Light;
  font-size: 32rpx;
  color: #344B67;
  text-align: center;
  line-height: 52rpx;
  margin: 28rpx auto 70rpx;
}
.returnBtn{
  background: #FFE300;
  border-radius: 100px;
  font-family: PingFang-SC-Heavy;
  font-size: 34rpx;
  color: #000000;
  text-align: center;
  width: 246rpx;
  height: 100rpx;
  margin: 0 auto;
  line-height: 100rpx;
}