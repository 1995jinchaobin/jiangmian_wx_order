.flex{
  display: flex;
}
.bigArea{
  width: 100%;
  background-color:  rgba(237,237,237,0.90);
}
.fabricArea{
  width: 640rpx;
  padding:0 56rpx;
  background-color: white;
  margin-bottom: 20rpx;
  padding-top: 44rpx;
}
.fabricName{
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #292B23;
  letter-spacing: 0.4rpx;
  line-height: 40rpx;
  padding-bottom: 32rpx;
  border-bottom: 2rpx solid  #F0F0F0;
  margin-bottom: 22rpx;
}
.firstBoxArea{
  width: 268rpx;
  text-align: left;
}
.boxTitle{
  font-family: PingFangSC-Semibold;
  font-size: 20rpx;
  color: #AAAAAA;
  letter-spacing: 1rpx;
  margin-bottom: 8rpx;
}
.boxNum{
  font-family: Montserrat-Medium;
  font-size: 32rpx;
  color: #292B23;
  letter-spacing: 0.4rpx;
