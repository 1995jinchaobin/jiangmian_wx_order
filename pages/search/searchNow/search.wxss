/* pages/search/searchNow/search.wxss */

.formBox{
  margin-bottom: 150rpx;
  background: #fff;
  margin-top: 78rpx;
}
.fabric{
  width: 718rpx;
  height: 94rpx;
  background: #FFF;
  display: flex;
  align-items: center;
  position: relative;
  border-bottom: 2rpx solid  #EEEEEE;
  margin-left: 32rpx;
}
.fabric text{
  font-size: 34rpx;
  color: #333333;
  
}
.fabric picker{
  position: absolute;
  width: 300rpx;
  right: 60rpx;
  text-align: right;
}
.picker{
  font-size: 34rpx;
  color: #CCCCCC;
}
.fabric image{
  position: absolute;
  width: 16rpx;
  height: 25rpx;
  right: 32rpx;
}
.fabric input{
  width: 300rpx;
  height: 48rpx;
  position: absolute;
  right: 32rpx;
  text-align: right;
}
.fabric switch{
  width: 300rpx;
  height: 48rpx;
  position: absolute;
  right: 32rpx;
  text-align: right;
}
.priceBox{
  width: 450rpx;
  height: 120rpx;
  background: #fff;
  text-align: center;
  line-height: 120rpx;
}
.priceBox text:nth-child(1),.priceBox text:nth-child(2){
  font-size: 30rpx;
  color: #333333;
}
.priceBox text:nth-child(2),.priceBox text:nth-child(3){
  color: #FF3B30;
}
.priceBox text:nth-child(3){
  font-size: 40rpx;
}
.btn{
  width: 100%;
  height: 94rpx;
  background: #FFE300;
  text-align: center;
  line-height: 94rpx;
  font-size: 36rpx;
  color: #000000;
  font-family: PingFangSC-Regular;
  position: absolute;
  bottom: 0rpx;
}
.input-placeholder{
  color: #cccccc !important;
}